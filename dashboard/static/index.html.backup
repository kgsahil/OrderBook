<div class="relative z-10 min-h-screen">
    <!-- Top Bar -->
    <header class="glass-strong border-b border-indigo-500/30 px-6 py-4">
        <div class="max-w-[1920px] mx-auto flex items-center justify-between">
            <div class="flex items-center gap-6">
                <h1
                    class="text-2xl font-bold bg-gradient-to-r from-purple-400 via-indigo-400 to-blue-400 bg-clip-text text-transparent text-glow">
                    Trading Simulation
                </h1>
                <div class="flex items-center gap-4 text-sm">
                    <div class="flex items-center gap-2">
                        <div class="h-2 w-2 rounded-full bg-green-400 animate-pulse"></div>
                        <span class="text-gray-400" x-text="connected ? 'Live' : 'Disconnected'"></span>
                    </div>
                    <span class="text-gray-500">•</span>
                    <span class="text-gray-400" x-text="`${instruments.length} Instruments`"></span>
                    <span class="text-gray-500">•</span>
                    <span class="text-gray-400" x-text="`${agents.length} Agents`"></span>
                </div>
            </div>
            <div class="flex items-center gap-4">
                <select x-model="selectedInstrumentId" @change="onInstrumentChange()"
                    class="glass px-4 py-2 rounded-lg border border-white/10 text-sm focus:outline-none focus:border-indigo-400">
                    <option value="">Select Instrument</option>
                    <template x-for="inst in instruments" :key="inst.symbol_id">
                        <option :value="inst.symbol_id" x-text="`${inst.ticker} - ${inst.description}`"></option>
                    </template>
                </select>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-[1920px] mx-auto px-6 py-6">
        <div class="grid grid-cols-12 gap-6 h-[calc(100vh-120px)]">
            <!-- Left Sidebar - Agents -->
            <div class="col-span-3 space-y-4 overflow-y-auto">
                <div class="glass-strong rounded-2xl p-4">
                    <h2 class="text-sm font-semibold text-gray-300 mb-4">Active Agents</h2>
                    <div class="space-y-3">
                        <template x-for="agent in sortedAgents" :key="agent.agent_id">
                            <div class="agent-card glass rounded-xl p-3 cursor-pointer card-hover"
                                :class="{'ring-2 ring-indigo-400 border-glow': selectedAgent?.agent_id === agent.agent_id}"
                                @click="showAgentDetailsModal(agent)">
                                <div class="flex items-center gap-3">
                                    <div class="agent-avatar"
                                        :style="`background: linear-gradient(135deg, ${getAgentColor(agent.personality)});`">
                                        <span x-text="agent.name.split('_')[1]"></span>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center justify-between">
                                            <span class="text-sm font-medium" x-text="agent.name"></span>
                                            <span class="text-xs px-2 py-0.5 rounded-full glass"
                                                x-text="agent.personality"
                                                :class="getPersonalityClass(agent.personality)"></span>
                                        </div>
                                        <div class="flex items-center justify-between mt-1">
                                            <span class="text-xs text-gray-400">Value</span>
                                            <span class="text-sm font-semibold price-tick"
                                                x-text="formatCurrency(agent.total_value || agent.cash)"></span>
                                        </div>
                                        <div class="flex items-center justify-between mt-1">
                                            <span class="text-xs text-gray-400">P&L</span>
                                            <span class="text-xs font-medium"
                                                :class="(agent.pnl || 0) >= 0 ? 'text-green-400' : 'text-red-400'"
                                                x-text="formatCurrency(agent.pnl || 0)"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>

            <!-- Center - Orderbook with Agents Around -->
            <div class="col-span-6 space-y-4 overflow-y-auto">
                <!-- Price Chart -->
                <div class="glass-strong rounded-2xl p-4" x-show="selectedInstrumentId">
                    <div class="flex items-center justify-between mb-4">
                        <div>
                            <h2 class="text-lg font-semibold"
                                x-text="selectedInstrumentMeta?.ticker || 'Select Instrument'"></h2>
                            <p class="text-sm text-gray-400" x-text="selectedInstrumentMeta?.description || ''"></p>
                        </div>
                        <div class="text-right">
                            <div class="text-2xl font-bold price-tick" :class="priceChangeClass"
                                x-text="currentPrice ? formatPrice(currentPrice) : '--'"></div>
                            <div class="text-xs font-semibold" :class="priceChangeClass"
                                x-text="priceChange ? `${priceChange > 0 ? '+' : ''}${priceChange.toFixed(2)}%` : ''">
                            </div>
                        </div>
                    </div>

                    <!-- Timeframe Controls -->
                    <div class="flex items-center gap-2 mb-3">
                        <span class="text-xs text-gray-400">Timeframe:</span>
                        <div class="flex gap-1">
                            <button @click="chartTimeframe = '1m'; updateChart();"
                                :class="chartTimeframe === '1m' ? 'bg-indigo-500 text-white' : 'glass text-gray-300 hover:bg-white/10'"
                                class="px-3 py-1 rounded-lg text-xs transition">1m</button>
                            <button @click="chartTimeframe = '5m'; updateChart();"
                                :class="chartTimeframe === '5m' ? 'bg-indigo-500 text-white' : 'glass text-gray-300 hover:bg-white/10'"
                                class="px-3 py-1 rounded-lg text-xs transition">5m</button>
                            <button @click="chartTimeframe = '15m'; updateChart();"
                                :class="chartTimeframe === '15m' ? 'bg-indigo-500 text-white' : 'glass text-gray-300 hover:bg-white/10'"
                                class="px-3 py-1 rounded-lg text-xs transition">15m</button>
                            <button @click="chartTimeframe = '1h'; updateChart();"
                                :class="chartTimeframe === '1h' ? 'bg-indigo-500 text-white' : 'glass text-gray-300 hover:bg-white/10'"
                                class="px-3 py-1 rounded-lg text-xs transition">1h</button>
                            <button @click="chartTimeframe = 'all'; updateChart();"
                                :class="chartTimeframe === 'all' ? 'bg-indigo-500 text-white' : 'glass text-gray-300 hover:bg-white/10'"
                                class="px-3 py-1 rounded-lg text-xs transition">All</button>
                        </div>
                    </div>

                    <div class="relative" style="height: 250px; width: 100%;">
                        <canvas id="priceChart"></canvas>
                        <div x-show="priceHistory.length === 0 && selectedInstrumentId"
                            class="absolute inset-0 flex items-center justify-center text-gray-500 text-sm bg-slate-950/50 rounded-lg">
                            Waiting for price data...
                        </div>
                    </div>
                </div>

                <!-- Orderbook -->
                <div class="glass-strong rounded-2xl p-4" x-show="selectedInstrumentId">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold">Orderbook</h2>
                        <div class="flex items-center gap-4 text-sm">
                            <div class="flex items-center gap-2">
                                <span class="text-gray-400">Bid:</span>
                                <span class="text-green-400 font-semibold price-tick"
                                    x-text="bestBid ? formatPrice(bestBid) : '--'"></span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-gray-400">Ask:</span>
                                <span class="text-red-400 font-semibold price-tick"
                                    x-text="bestAsk ? formatPrice(bestAsk) : '--'"></span>
                            </div>
                            <div class="spread-indicator px-3 py-1 rounded-lg border border-indigo-500/30">
                                <span class="text-gray-400">Spread:</span>
                                <span class="text-white font-semibold ml-2 price-tick"
                                    x-text="spread ? formatPrice(spread) : '--'"></span>
                            </div>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <!-- Asks (Sell Side) -->
                        <div>
                            <div class="text-xs text-gray-400 mb-2 px-2">Asks (Sell)</div>
                            <div class="space-y-1 max-h-96 overflow-y-auto">
                                <template x-for="(ask, idx) in asks.slice(0, 20)" :key="idx">
                                    <div class="orderbook-row glass rounded-lg px-3 py-2 flex items-center justify-between text-sm card-hover"
                                        :class="{'order-animation': recentOrderAnimations.has(`ask-${idx}`)}">
                                        <span class="text-red-400 font-medium price-tick"
                                            x-text="formatPrice(ask.price)"></span>
                                        <span class="text-gray-300" x-text="formatQuantity(ask.quantity)"></span>
                                    </div>
                                </template>
                                <div x-show="asks.length === 0" class="text-center text-gray-500 text-sm py-8">No
                                    asks</div>
                            </div>
                        </div>

                        <!-- Bids (Buy Side) -->
                        <div>
                            <div class="text-xs text-gray-400 mb-2 px-2">Bids (Buy)</div>
                            <div class="space-y-1 max-h-96 overflow-y-auto">
                                <template x-for="(bid, idx) in bids.slice(0, 20)" :key="idx">
                                    <div class="orderbook-row glass rounded-lg px-3 py-2 flex items-center justify-between text-sm card-hover"
                                        :class="{'order-animation': recentOrderAnimations.has(`bid-${idx}`)}">
                                        <span class="text-green-400 font-medium price-tick"
                                            x-text="formatPrice(bid.price)"></span>
                                        <span class="text-gray-300" x-text="formatQuantity(bid.quantity)"></span>
                                    </div>
                                </template>
                                <div x-show="bids.length === 0" class="text-center text-gray-500 text-sm py-8">No
                                    bids</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar - Stats & Controls -->
            <div class="col-span-3 space-y-4 overflow-y-auto relative z-10">
                <!-- Market Stats -->
                <div class="glass-strong rounded-2xl p-4">
                    <h2 class="text-sm font-semibold text-gray-300 mb-4">Market Stats</h2>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Total Volume</span>
                            <span class="text-sm font-semibold"
                                x-text="formatCurrency(calculatedMarketStats.totalVolume)"></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Active Orders</span>
                            <span class="text-sm font-semibold" x-text="calculatedMarketStats.totalOrders"></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Avg Spread</span>
                            <span class="text-sm font-semibold"
                                x-text="calculatedMarketStats.avgSpread ? calculatedMarketStats.avgSpread.toFixed(4) : '--'"></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Instruments</span>
                            <span class="text-sm font-semibold" x-text="instruments.length"></span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span class="text-sm text-gray-400">Active Agents</span>
                            <span class="text-sm font-semibold" x-text="agents.length"></span>
                        </div>
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="glass-strong rounded-2xl p-4">
                    <h2 class="text-sm font-semibold text-gray-300 mb-4">Recent Activity</h2>
                    <div class="space-y-2 max-h-64 overflow-y-auto">
                        <template x-for="(activity, idx) in recentActivity.slice().reverse()" :key="idx">
                            <div class="text-xs glass rounded-lg px-3 py-2">
                                <div class="flex items-center justify-between">
                                    <span class="text-gray-300" x-text="activity.agent"></span>
                                    <span class="text-gray-500" x-text="formatTime(activity.time)"></span>
                                </div>
                                <div class="flex items-center gap-2 text-xs text-indigo-300 mt-1">
                                    <span class="font-semibold" x-text="activity.ticker || ''"></span>
                                    <span class="text-gray-500">•</span>
                                    <span class="uppercase tracking-wide" x-text="activity.side"></span>
                                    <span x-text="`${activity.quantity} @ ${formatPrice(activity.price)}`"></span>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>

                <!-- News Section -->
                <div class="glass-strong rounded-2xl p-4">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-sm font-semibold text-gray-300">Market News</h2>
                        <button @click="loadNews()" class="text-xs text-indigo-400 hover:text-indigo-300 transition">
                            Refresh
                        </button>
                    </div>
                    <div class="space-y-2 max-h-96 overflow-y-auto">
                        <template x-for="(news, idx) in newsItems" :key="idx">
                            <div class="glass rounded-lg p-3 text-xs">
                                <div class="flex items-start justify-between mb-1">
                                    <span class="font-semibold text-gray-200" x-text="news.headline || 'News'"></span>
                                    <span class="text-gray-500 ml-2" x-text="formatTime(news.created_at)"></span>
                                </div>
                                <div class="text-gray-400 mt-1 line-clamp-2" x-text="news.content || ''"></div>
                            </div>
                        </template>
                        <div x-show="newsItems.length === 0" class="text-center text-gray-500 text-sm py-4">
                            No news available
                        </div>
                    </div>
                </div>


                <!-- Admin Controls -->
                <div class="glass-strong rounded-2xl p-4">
                    <h2 class="text-sm font-semibold text-gray-300 mb-4">Admin</h2>
                    <div class="space-y-3">
                        <button @click="showAddInstrument = !showAddInstrument"
                            class="w-full glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/20 hover:border-indigo-500/40">
                            Add Instrument
                        </button>
                        <button @click="showAddAgent = !showAddAgent"
                            class="w-full glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/20 hover:border-indigo-500/40">
                            Add Agent
                        </button>
                        <button @click="showAddNews = !showAddNews"
                            class="w-full glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/20 hover:border-indigo-500/40">
                            Publish News
                        </button>
                    </div>

                    <!-- Add Instrument Modal -->
                    <div x-show="showAddInstrument" x-cloak
                        class="fixed inset-0 z-[100] flex items-center justify-center modal-overlay"
                        @click.self="showAddInstrument = false" style="display: none;"
                        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
                        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
                        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
                        <div class="glass-strong rounded-2xl p-6 w-full max-w-md mx-4 relative z-[101] border-glow"
                            @click.stop style="background: rgba(26, 26, 46, 0.98);"
                            x-transition:enter="transition ease-out duration-300"
                            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
                            x-transition:leave="transition ease-in duration-200"
                            x-transition:leave-start="opacity-100 scale-100"
                            x-transition:leave-end="opacity-0 scale-95">
                            <h3 class="text-lg font-semibold mb-4">Add New Instrument</h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Ticker</label>
                                    <input type="text" x-model="newInstrument.ticker"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="AAPL">
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Description</label>
                                    <input type="text" x-model="newInstrument.description"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="Company description">
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Industry</label>
                                    <input type="text" x-model="newInstrument.industry"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="Technology">
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Initial Price</label>
                                    <input type="number" step="0.01" x-model="newInstrument.initial_price"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="100.00">
                                </div>
                                <div class="flex gap-3">
                                    <button @click="addInstrument()"
                                        class="flex-1 bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 rounded-lg px-4 py-2 text-sm font-medium transition shadow-lg border-glow">
                                        Add
                                    </button>
                                    <button @click="showAddInstrument = false"
                                        class="flex-1 glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/30">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add Agent Modal -->
                    <div x-show="showAddAgent" x-cloak
                        class="fixed inset-0 z-[100] flex items-center justify-center modal-overlay"
                        @click.self="showAddAgent = false" style="display: none;"
                        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
                        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
                        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
                        <div class="glass-strong rounded-2xl p-6 w-full max-w-md mx-4 relative z-[101] border-glow"
                            @click.stop style="background: rgba(26, 26, 46, 0.98);"
                            x-transition:enter="transition ease-out duration-300"
                            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
                            x-transition:leave="transition ease-in duration-200"
                            x-transition:leave-start="opacity-100 scale-100"
                            x-transition:leave-end="opacity-0 scale-95">
                            <h3 class="text-lg font-semibold mb-4">Add New Agent</h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Agent Name</label>
                                    <input type="text" x-model="newAgent.name"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="Agent_1">
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Personality</label>
                                    <select x-model="newAgent.personality"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none">
                                        <option value="conservative">Conservative</option>
                                        <option value="aggressive">Aggressive</option>
                                        <option value="momentum">Momentum</option>
                                        <option value="news_trader">News Trader</option>
                                        <option value="market_maker">Market Maker</option>
                                        <option value="neutral">Neutral</option>
                                        <option value="short_seller">Short Seller</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Starting Capital</label>
                                    <input type="number" step="0.01" x-model="newAgent.starting_capital"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="100000.00">
                                </div>
                                <div class="flex gap-3">
                                    <button @click="addAgent()"
                                        class="flex-1 bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 rounded-lg px-4 py-2 text-sm font-medium transition shadow-lg border-glow">
                                        Add
                                    </button>
                                    <button @click="showAddAgent = false"
                                        class="flex-1 glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/30">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Add News Modal -->
                    <div x-show="showAddNews" x-cloak
                        class="fixed inset-0 z-[100] flex items-center justify-center modal-overlay"
                        @click.self="showAddNews = false" style="display: none;"
                        x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0"
                        x-transition:enter-end="opacity-100" x-transition:leave="transition ease-in duration-200"
                        x-transition:leave-start="opacity-100" x-transition:leave-end="opacity-0">
                        <div class="glass-strong rounded-2xl p-6 w-full max-w-md mx-4 relative z-[101] border-glow"
                            @click.stop style="background: rgba(26, 26, 46, 0.98);"
                            x-transition:enter="transition ease-out duration-300"
                            x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100"
                            x-transition:leave="transition ease-in duration-200"
                            x-transition:leave-start="opacity-100 scale-100"
                            x-transition:leave-end="opacity-0 scale-95">
                            <h3 class="text-lg font-semibold mb-4">Publish News</h3>
                            <div class="space-y-4">
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Headline</label>
                                    <input type="text" x-model="newNews.headline"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="News headline">
                                </div>
                                <div>
                                    <label class="text-sm text-gray-400 mb-1 block">Content</label>
                                    <textarea x-model="newNews.content" rows="4"
                                        class="w-full glass rounded-lg px-4 py-2 border border-white/10 focus:border-indigo-400 focus:outline-none"
                                        placeholder="News content"></textarea>
                                </div>
                                <div class="flex gap-3">
                                    <button @click="publishNews()"
                                        class="flex-1 bg-gradient-to-r from-indigo-500 to-purple-500 hover:from-indigo-600 hover:to-purple-600 rounded-lg px-4 py-2 text-sm font-medium transition shadow-lg border-glow">
                                        Publish
                                    </button>
                                    <button @click="showAddNews = false"
                                        class="flex-1 glass hover:bg-indigo-500/20 rounded-lg px-4 py-2 text-sm transition border border-indigo-500/30">
                                        Cancel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<!-- Agent Details Modal -->
<div x-show="showAgentDetails" x-cloak class="fixed inset-0 z-[100] flex items-center justify-center modal-overlay"
    @click.self="showAgentDetails = false" style="display: none;" x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0" x-transition:enter-end="opacity-100"
    x-transition:leave="transition ease-in duration-200" </path>
    </svg>
    </button>
</div>

<div x-show="agentDetails" class="space-y-6">
    <!-- Agent Stats -->
    <div class="grid grid-cols-2 gap-4">
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">Personality</div>
            <div class="text-sm font-semibold" :class="getPersonalityClass(agentDetails?.personality)"
                x-text="agentDetails?.personality || 'N/A'"></div>
        </div>
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">Starting Capital</div>
            <div class="text-sm font-semibold" x-text="formatCurrency(agentDetails?.starting_capital || 0)">
            </div>
        </div>
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">Current Cash</div>
            <div class="text-sm font-semibold" x-text="formatCurrency(agentDetails?.cash || 0)"></div>
        </div>
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">Total Value</div>
            <div class="text-sm font-semibold" x-text="formatCurrency(agentDetails?.total_value || 0)">
            </div>
        </div>
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">P&L</div>
            <div class="text-sm font-semibold"
                :class="(agentDetails?.pnl || 0) >= 0 ? 'text-green-400' : 'text-red-400'"
                x-text="formatCurrency(agentDetails?.pnl || 0)"></div>
        </div>
        <div class="glass rounded-lg p-4">
            <div class="text-xs text-gray-400 mb-1">Positions</div>
            <div class="text-sm font-semibold" x-text="Object.keys(agentDetails?.positions || {}).length">
            </div>
        </div>
    </div>

    <!-- Positions -->
    <div x-show="Object.keys(agentPositions).length > 0">
        <h4 class="text-sm font-semibold text-gray-300 mb-3">Current Positions</h4>
        <div class="space-y-2">
            <template x-for="(position, instrumentId) in agentPositions" :key="instrumentId">
                <div class="glass rounded-lg p-3 text-sm">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-300">Instrument ID: <span x-text="instrumentId"></span></span>
                        <span class="font-semibold" :class="position.quantity >= 0 ? 'text-green-400' : 'text-red-400'"
                            x-text="`${position.quantity >= 0 ? '+' : ''}${position.quantity}`"></span>
                    </div>
                    <div class="text-xs text-gray-400 mt-1">
                        Avg Price: <span x-text="formatPrice(position.avg_price)"></span>
                    </div>
                </div>
            </template>
        </div>
    </div>

    <!-- Trade History -->
    <div>
        <h4 class="text-sm font-semibold text-gray-300 mb-3">Recent Trades</h4>
        <div class="space-y-2 max-h-64 overflow-y-auto">
            <template x-for="(trade, idx) in agentTrades.slice().reverse()" :key="idx">
                <div class="glass rounded-lg p-3 text-xs">
                    <div class="flex justify-between items-center">
                        <span class="text-gray-300" x-text="trade.side"></span>
                        <span class="text-gray-500" x-text="formatTime(trade.timestamp)"></span>
                    </div>
                    <div class="mt-1 flex justify-between">
                        <span class="text-gray-400">Qty: <span x-text="trade.quantity"></span></span>
                        <span class="text-gray-400">Price: <span x-text="formatPrice(trade.price)"></span></span>
                        <span class="text-gray-400">Symbol: <span x-text="trade.symbol_id"></span></span>
                    </div>
                </div>
            </template>
            <div x-show="agentTrades.length === 0" class="text-center text-gray-500 text-sm py-4">
                No trades yet
            </div>
        </div>
    </div>
</div>
</div>
</div>
</body>

</html>